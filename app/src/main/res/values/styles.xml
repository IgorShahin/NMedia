<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="Widget.App.ButtonCheckBox" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/liked_tint_selector</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="icon">@drawable/ic_liked_selector_24</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Widget.App.ButtonMenu" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:minWidth">48dp</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

</resources>